extends ../layout.jade
block styles
    link(rel="stylesheet" href="/css/umbreon.css?v=1")

block body
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                a.navbar-brand(href="/")
                    img(alt="Logo" title="Logo" src="/images/sitelogo.png" style="max-height: 20px;")
    .attractor
        .container
            .row
                .col-xs-12
                    .attractor-text-holder
                        h1 <i class="fa fa-key"></i> Welcome back #{username}, we're almost there&hellip;
    br
    .container
        .row
            .col-md-8
                h1 Set your password 
                p Now that we've verified your e-mail address, we just need a password to complete your account and unlock the system.
                .alert.alert-info
                    p <strong>Make it Strong</strong>
                        br 
                        | Make sure your password is as strong as possible, its got access to everything!
                        br
                        | It needs to be at least <strong>10</strong> characters long. You may wish to include numbers and symbols, or make it a long string of unconnected words.
                br
                if err == "mismatch"
                    .alert.alert-danger
                        p <strong>This is why we check</strong>
                            br 
                            | Sorry, it seems the two passwords you typed don't match. Please retype them carefully or think of an easier to spell password.
                if err == "short"
                    .alert.alert-danger
                        p <strong>Password too short</strong>
                            br 
                            | Your password must be at least ten characters long.
                form.form-horizontal#firstAdminPassForm(method="POST")
                    input(type="hidden", name="code" value="#{email_code}")

                    .form-group.has-feedback#password-group
                        label.col-sm-3.control-label(for="password") Password:
                        .col-sm-6
                            input.form-control#password(name="password", type="password", required, minlength="8")
                            span.fa.fa-fw.form-control-feedback#password-state-icon(aria-hidden="true")
                            .field-info-base#password-state-text

                    .form-group.has-feedback#confirm-group
                        label.col-sm-3.control-label(for="confirm") Confirm password:
                        .col-sm-6
                            input.form-control#confirm(name="confirm", type="password", required, minlength="8")
                            span.fa.fa-fw.form-control-feedback#confirm-state-icon(aria-hidden="true")
                            .field-info-base#confirm-state-text

                    .form-group
                        .col-sm-3
                        .col-sm-6
                            button.btn.btn-lg.btn-success(type="submit")
                                | Save Password
                br
                br
            .col-md-4.text-center
                img(alt='Picnic Logo', title='Picnic Logo', src="/images/logo256.png")

